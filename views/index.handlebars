<div class="container">
  <div class="row">
    <h1>Eat Da Burger!</h1>
  </div>
  <div class="row">
    <div class="col-6">
      <h2>Burgers that have not been eaten!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{!-- {{> burgers/cat-block sleep=true}} --}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers/cat-block sleep=false}} --}}
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>
  <div class="row">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
  </div>
</div>







